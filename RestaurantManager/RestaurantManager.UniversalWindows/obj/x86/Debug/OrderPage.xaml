<Page
    x:Class="RestaurantManager.UniversalWindows.OrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestaurantManager.UniversalWindows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.TopAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='1' x:Name="appBarButton" Label="Home" Icon="Home"                           />
        </CommandBar>
    </Page.TopAppBar>

    <Page.DataContext>
        <local:DataManager />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.25*"/>
            </Grid.ColumnDefinitions>


            <TextBlock Grid.Column="1" Grid.Row="1" Text="Special Requests:" />
            <TextBlock Grid.Column="2" Grid.Row="1" Text="Order Items:" />

            <ListView x:ConnectionId='2' x:Name="requestsListView" Grid.Row="2"  Grid.Column="1" ItemsSource="{Binding MenuItems}" />
            <ListView x:ConnectionId='3' x:Name="itemsListView" Grid.Row="2" Grid.Column="2" ItemsSource="{Binding CurrentlySelectedMenuItems}" />

            <Button Grid.Row="4" Grid.Column="0" Content="**Add to Order**" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Button Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Content="**Submit Order**" HorizontalAlignment="Center" VerticalAlignment="Center" />

        </Grid>

    </Grid>
</Page>

